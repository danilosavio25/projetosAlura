package br.com.alura.gerenciador.web;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet(urlPatterns="/fazTudo")
public class Controller extends HttpServlet{
	
	@Override
	protected void service(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		String action = req.getParameter("tarefa");
		if(action == null) throw new IllegalArgumentException();
		
		String nomeDaClasse = "br.com.alura.gerenciador.web." + action;
		try {
			Class tipo = Class.forName(nomeDaClasse);
			Tarefa tarefa = (Tarefa) tipo.newInstance();
		
			String pagina = tarefa.executa(req, resp);
			
			req.getRequestDispatcher(pagina).forward(req, resp);
			
		} catch (ClassNotFoundException | InstantiationException | IllegalAccessException e) {
			e.printStackTrace();
			throw new ServletException(e);
		}
		
	}
}
